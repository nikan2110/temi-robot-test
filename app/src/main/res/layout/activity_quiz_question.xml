<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAF4F5"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".QuizQuestionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header_background"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rimon_logo"
            android:scaleType="fitXY"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="60sp"
            tools:text="What country this flag belong to?" />

        <LinearLayout
            android:layout_width="720dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="4"
                android:minHeight="50dp"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="14sp"
                tools:text="0/4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/tv_option_one"
                    android:layout_width="183dp"
                    android:layout_height="174dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/angry_face"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/tv_option_two"
                    android:layout_width="183dp"
                    android:layout_height="174dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/normal_face"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/tv_option_three"
                    android:layout_width="183dp"
                    android:layout_height="174dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/smile_face"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/tv_option_four"
                    android:layout_width="183dp"
                    android:layout_height="174dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/happy_face"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="start">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit_question"
                android:layout_width="117dp"
                android:layout_height="118dp"
                android:background="@drawable/button_next" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_finish"
                android:layout_width="wrap_content"
                android:layout_height="118dp"
                android:layout_marginLeft="115dp"
                android:background="@drawable/finish_button"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>